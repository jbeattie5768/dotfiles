{
    // //////////////////////////////////////////////////////////////
    // Editor: General Settings
    "editor.fontFamily": " 'Cascadia Code NF', 'Cascadia Code', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "files.eol": "\n",
    "workbench.settings.applyToAllProfiles": [
        "files.eol"
    ],

    // Editor: Markdown Specific Settings
    "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      // "source.fixAll.markdownlint": "explicit",
      }
    },

    // Editor: Python Specific Settings
    "[python]": {
      "editor.defaultFormatter": "charliermarsh.ruff",
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        // "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
      }
    },

    // Editor: PowerShell Specific Settings
    "[powershell]": {
      "files.encoding": "utf8bom",
      "files.autoGuessEncoding": true
    },

    // Ruff settings
    //"ruff.configuration": "~/path/to/ruff.toml"
    // "ruff.logLevel": "debug", // "trace" | "debug" | "info" | "warn" | "error"
    // "ruff.logFile": "c:/temp/ruff.log",

    "python.testing.pytestArgs": [],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "${workspaceFolder}/tests",
    "python.testing.autoTestDiscoverOnSaveEnabled": true,

    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
      // "notebook.source.fixAll": "explicit",
      "notebook.source.organizeImports": "explicit"
      },

    // //////////////////////////////////////////////////////////////
    // Terminal Settings
    "terminal.integrated.defaultProfile.windows": "PowerShell",   // "Command Prompt",
    "terminal.integrated.allowedLinkSchemes": [
      "file",
      "http",
      "https",
      "mailto",
      "vscode",
      "vscode-insiders",
      "docker-desktop"
    ],

    // //////////////////////////////////////////////////////////////
    // Copilot Settings: https://code.visualstudio.com/docs/copilot/reference/copilot-settings
    // "github.copilot.chat.agent.thinkingTool": true,

    // //////////////////////////////////////////////////////////////
    // Python Settings
    // "python.venvPath": "~/venvs",  // UV manages locally per project
    // "python.analysis.inlayHints.variableTypes": true,
    // "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.typeCheckingMode": "off",  // "basic" | "standard" | "strict" | "off"

    // //////////////////////////////////////////////////////////////
    // MCP Settings
    "chat.mcp.discovery.enabled": {
      "claude-desktop": true,
      "windsurf": true,
      "cursor-global": true,
      "cursor-workspace": true
    },

    // //////////////////////////////////////////////////////////////
    // cSpell Extension Settings
    "cSpell.language": "en-GB",
    "cSpell.userWords": [
      "beatt",
      "pytest",
      "venv",
      "venvs"
    ],

    "github.copilot.nextEditSuggestions.enabled": true,
    "projectManager.git.baseFolders": [
      "W:\\github"
    ],
    "workbench.colorTheme": "Monokai",

    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.persistentSessionReviveProcess": "never"

}
